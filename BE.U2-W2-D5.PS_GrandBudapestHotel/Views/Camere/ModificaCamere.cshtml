@model BE.U2_W2_D5.PS_GrandBudapestHotel.Models.Camera

@{
    ViewBag.Title = "ModificaCamere";
}

<h2>Modifica Camera</h2>

<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal"  id="contModifica">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.IdCamera, htmlAttributes: new { @class = "control-label" })
                <div >
                    @Html.EditorFor(model => model.IdCamera, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IdCamera, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.NumeroCamera, htmlAttributes: new { @class = "control-label" })
                <div >
                    @Html.EditorFor(model => model.NumeroCamera, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumeroCamera, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label " })
                <div >
                    @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.TipoCamera, htmlAttributes: new { @class = "control-label" })
                <div >
                    @Html.DropDownListFor(model => model.TipoCamera, new SelectList(ViewBag.DropCamera, "Value", "Text"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TipoCamera, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class=" col-md-10">
                    <input type="submit" value="Salva" class="btn btn-default" />
                </div>
            </div>
        </div>
    }


    <div>
        @Html.ActionLink("Ritorna alle camere", "Camere")
    </div>

    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
