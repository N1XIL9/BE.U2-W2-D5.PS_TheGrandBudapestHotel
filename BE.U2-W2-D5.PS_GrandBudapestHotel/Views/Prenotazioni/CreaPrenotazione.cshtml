@model BE.U2_W2_D5.PS_GrandBudapestHotel.Models.Prenotazioni

@{
    ViewBag.Title = "CreaPrenotazione";
}

<h2>Crea Prenotazione</h2>

<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" id="contModifica">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.IdCliente, htmlAttributes: new { @class = "control-label" })
