@model IEnumerable<BE.U2_W2_D5.PS_GrandBudapestHotel.Models.Clienti>

@{
    ViewBag.Title = "DettagliCliente";
}

<h2>Clienti</h2>


<div class="container">
    <p>
        @Html.ActionLink("Crea nuovo cliente", "CreaCliente")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cognome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Citta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cellulare)
            </th>
           
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cognome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Citta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Provincia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cellulare)
                </td>
                
                <td>
                    @Html.ActionLink("Modifica", "ModificaCliente", new { id=item.IdCliente }) |
                    @Html.ActionLink("Dettagli", "DettaglioCliente", new { id=item.IdCliente }) |
                    @Html.ActionLink("Elimina", "CancellaCliente", new { id=item.IdCliente })
                </td>
            </tr>
        }

    </table>
    </div>